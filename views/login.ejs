<!DOCTYPE html>
<html lang="en">
<%- include("partials/head.ejs") %>

<body id='logIn' class="bg-light">
  <div class='container mt-5'>
    <div class='row justify-content-center'>
      <div class='col-md-6'>
        <div class='card shadow'>
          <div class='card-header text-center'>
            <!-- Header with logo and text inline -->
            <h1 class="h3 d-inline align-middle">JobMagnet</h1>
            <img src='https://cdn.iconscout.com/icon/free/png-256/free-magnet-2130807-1798587.png' alt='JobMagnet Logo' style='height: 30px; vertical-align: middle;'>
          </div>
          <div class='card-body'>
            <h3 class='text-center'>Please Log In</h3>
            <form method="POST" action="/login" autocomplete="off">
              <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="text" class="form-control" id="inputEmail" name='email' aria-describedby="emailHelp">
              </div>
              <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword" name='password'>
              </div>
              <button type="submit" class="btn btn-primary w-100">Login</button>
              <% if (typeof(error) != "undefined") { %> 
                <div class="alert alert-danger mt-2">
                  <%= error %>
                </div>
              <% } %>
            </form>
            <hr>
            <div class="text-center">
              <p>New? <a href="/signUp">Sign up now!</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/footer.ejs") %>
</body>
</html>
